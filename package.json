{
  "name": "hetzner-mcp",
  "version": "0.1.0",
  "description": "Production-grade MCP server for all Hetzner APIs: Cloud, Robot (dedicated servers), and DNS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hetzner-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
